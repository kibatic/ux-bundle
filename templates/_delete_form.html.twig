<form
    method="post"
    action="{{ path(route, {'id': entity.id}) }}"
    data-controller="confirm"
    {% if confirm_text is defined %}data-confirm-text-value="{{ confirm_text }}"{% endif %}
    {% if confirm_title is defined %}data-confirm-title-value="{{ confirm_title }}"{% endif %}
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
    {% if method is defined and method|lower == "delete" %}
    <input type="hidden" name="_method" value="DELETE">
    {% endif %}
    <button type="submit" class="btn btn-outline-danger">
        <i class="bi bi-trash-fill"></i> {{ btn_label|default('Delete'|trans) }}
    </button>
</form>
